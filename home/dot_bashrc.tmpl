# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

[ "$DOT_BASH_RC_LOADED" = "1" ] && return

export DOT_BASH_RC_LOADED=1

# Force programs use XDG_CONFIG_HOME
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
export WAKATIME_HOME=$XDG_CONFIG_HOME/wakatime
export GNUPGHOME=$XDG_CONFIG_HOME/gnupg

{{- $brew := joinPath .mirrors.homebrew.prefix "bin/brew" }}
{{- if isExecutable $brew }}
  {{- output $brew "shellenv" "bash" }}
  {{- if .mirrors.enabled }}
export HOMEBREW_BREW_GIT_REMOTE="{{ .mirrors.homebrew.git_remote }}"
export HOMEBREW_API_DOMAIN="{{ .mirrors.homebrew.api_domain }}"
export HOMEBREW_BOTTLE_DOMAIN="{{ .mirrors.homebrew.bottle_domain }}"
  {{- end }}
{{- end }}

{{- $local_bin := joinPath .chezmoi.homeDir ".local/bin" }}
{{- if stat $local_bin }}
PATH="{{ $local_bin }}:$PATH"
{{- end }}
{{- $cargo_bin := joinPath .chezmoi.homeDir ".cargo/bin" }}
{{- if stat $cargo_bin }}
PATH="{{ $cargo_bin }}:$PATH"
{{- end }}
export PATH
