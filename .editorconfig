root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.py]
indent_size = 4

[*.jl]
indent_size = 4
max_line_length = 92

[*.rs]
indent_size = 4
max_line_length = 100

[{.gitconfig,.config/git/config*}]
indent_style = tab

[{.gitmodules,**/.gitmodules}]
indent_style = tab

[Makefile]
indent_style = tab
