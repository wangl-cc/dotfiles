// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Vim settings
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },
  // Theme settings
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  // Buffer font settings
  "buffer_font_size": 13,
  "buffer_font_family": "FiraCode Nerd Font",
  // UI settings
  "ui_font_size": 15,
  // Terminal settings
  "terminal": {
    "working_directory": "current_project_directory",
    "env": {
      // Use zed itself as editor for CLI tools that require an editor.
      // The `--add` flag makes zed open the file in current workspace.
      "VISUAL": "zed --add",
      // For git commands like `git commit`, a `--wait` flag is needed to
      // make the command wait for the given buffer to be closed.
      "GIT_EDITOR": "zed --wait --add"
    },
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "fish"
      }
    }
  },
  // LSP settings
  "inlay_hints": {
    "enabled": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    }
  },
  // General editor settings
  "tab_size": 2,
  // Language specific settings
  "languages": {
    "Python": {
      "tab_size": 4
    },
    "Rust": {
      "tab_size": 4
    },
    "Julia": {
      "tab_size": 4
    },
    "Fish": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "fish_indent"
        }
      }
    }
  }
}
