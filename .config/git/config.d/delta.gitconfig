[core]
	pager = git delta
[interactive]
	diffFilter = delta --color-only
[diff]
	colorMoved = default
[delta]
	navigate = true
	side-by-side = true
	syntax-theme = ansi

# TODO: better color themes for dark and in light background
[alias]
	delta = !delta $(defaults read -g AppleInterfaceStyle &>/dev/null || echo --light)

